{
    "name": "Sam-Burns/dirty-needle",

    "version": "1.2.0",

    "description": "Dependency Injection container for PHP",

    "require": {
        "php" : ">= 5.4.0"
    },

    "require-dev": {
        "phpunit/phpunit":                   "~4.5",
        "satooshi/php-coveralls":            "dev-master",
        "henrikbjorn/phpspec-code-coverage": "~1.0.1"
    },

    "autoload": {
        "psr-0": {
            "DirtyNeedle\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-0": {
            "DirtyNeedle\\PhpunitTest\\": "tests/phpunit/"
        },
        "psr-4": {
            "DirtyNeedle\\BlackfireTest\\FixtureClasses\\": "tests/blackfire/FixtureClasses"
        }
    }
}
